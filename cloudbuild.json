{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "europe-west2-docker.pkg.dev/${PROJECT_ID}/${REPO_NAME}/nest-auth:{$COMMIT_SHA}",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "europe-west2-docker.pkg.dev/${PROJECT_ID}/${REPO_NAME}/nest-auth:{$COMMIT_SHA}"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "nest-auth",
        "--image",
        "europe-west2-docker.pkg.dev/${PROJECT_ID}/${REPO_NAME}/nest-auth:{$COMMIT_SHA}",
        "region",
        "europe-west2"
      ]
    }
  ],
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
